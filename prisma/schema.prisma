generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Simulation {
  id        String   @id @default(uuid())
  name      String
  startDate DateTime
  realRate  Float
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  allocations Allocation[]
  movements   Movement[]
  insurances  Insurance[]
}

model Allocation {
  id           String   @id @default(uuid())
  type         String
  name         String
  value        Float
  date         DateTime
  simulationId String
  simulation   Simulation @relation(fields: [simulationId], references: [id])
  financing    Financing?
}

model Financing {
  id           String   @id @default(uuid())
  allocationId String   @unique
  allocation   Allocation @relation(fields: [allocationId], references: [id])
  startDate    DateTime
  installments Int
  interestRate Float
  downPayment  Float
}

model Insurance {
  id           String   @id @default(uuid())
  name         String
  startDate    DateTime
  duration     Int
  premium      Float
  insuredValue Float
  simulationId String
  simulation   Simulation @relation(fields: [simulationId], references: [id])
}

model Movement {
  id           String   @id @default(uuid())
  type         String
  value        Float
  frequency    String
  startDate    DateTime
  endDate      DateTime?
  simulationId String
  simulation   Simulation @relation(fields: [simulationId], references: [id])
}
